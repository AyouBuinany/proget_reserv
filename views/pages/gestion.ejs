
<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Safi Look gestion</title>

  <!-- Bootstrap core CSS -->
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom fonts for this template -->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/grayscale.min.css" rel="stylesheet">
  <link href="/index.css" rel="stylesheet">
  <link rel="stylesheet" href="mainstyle.css">
</head>

<body id="page-top">
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand js-scroll-trigger" href="#page-top">Safi Look</a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#sections1">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="/">deconnecter</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Header -->
  <header class="masthead" id="header1">
    <div class="container d-flex h-100 align-items-center">
      <div class="mx-auto text-center">
        <h1 class="mx-auto my-0 text-uppercase">Safi Look</h1>
        <h2 class="text-white-50 mx-auto mt-2 mb-5">Best place in the world .</h2>
        <a href="#sections1" class="btn btn-primary js-scroll-trigger">About</a>
      </div>
    </div>
  </header>
  <% if(locals.supprimer){%>
    <h2 style="color: white; font-family: initial; background-color: cadetblue;"> <%= supprimer%></h2><%}%>
<section id="sections1">
    <h1 class="h1s"> List des Clients</h1>
    <table class="table table-sm">
        <thead class="thead-light">
          <tr>
            <th scope="col">id</th>
            <th scope="col">Nom</th>
            <th scope="col">Prenom</th>
            <th scope="col">Age</th>
            <th scope="col">CIN</th>
            <th scope="col">Adress</th>
            <th scope="col">Email</th>
            <th scope="col">Telephone</th>
            <th>Treatment</th>
          </tr>
        </thead>
        <tbody id="tbody">
                <%for(var client of list_client){%>
               <tr>
                <td ><%= client.id%></td>
                <td><%= client.Nom%></td>
                <td><%= client.Prenom%></td>
                <td ><%= client.Age%></td>
                <td ><%= client.Cin%></td>
                <td ><%= client.Adresse%></td>
                <td><%= client.Email%></td>
                <td ><%= client.Telephone%></td>
                <td id="dlinks">
                    <a href="/edit/<%= client.id %>"  class="btn links btn-success" style="color: white">
                        Edit
                        </a>
                   <a href="/delete/<%= client.id %>"  class="btn links btn-danger" style="color: white" onclick="return confirm('are u sure ?')">
                             Delete
                        </a>
                <%}%>
            </tbody>
      </table>
    <a href="#sections2" class="nav-link js-scroll-trigger" > <button type="button" class="btn btn-primary" id='Btoggle'>Ajouter</button></a>

    
</section>
<%if(locals.error){%>
<div style="background-color: red; margin:10px auto;text-align: center; width: 15%; padding: 20px; color: white;"> <%=error%></div>
    <%}%>
<section id="sections2">
    <h1 class="h1s"> Ajouter Client</h1>
    <form  action="/addClient" method="POST">
        <input class="form-control " required type="text" name="Nom" placeholder="Nom">
        <input class="form-control" required type="text" name="Prenom" placeholder="Prenom">
        <input class="form-control" required type="text" name="Age" placeholder="Age">
        <input class="form-control " required type="text" name="Cin" placeholder="Cin">
        <textarea class="form-control" required name="Adresse" placeholder="Adresse"> </textarea>
        <input class="form-control" required type="email" name="Email" placeholder="Email">
        <input class="form-control" required type="password" name="Password"  placeholder="Password">
        <input class="form-control" required type="tel" name="Telephone" placeholder="Telephone">
        <button class="btn btn-primary" required style="margin-top: 20px;">Ajouter Client</button>
    </form>
</section>

  <section class="contact-section bg-black">
    <div class="container">

      <div class="row">

        <div class="col-md-4 mb-3 mb-md-0">
          <div class="card py-4 h-100">
            <div class="card-body text-center">
              <i class="fas fa-map-marked-alt text-primary mb-2"></i>
              <h4 class="text-uppercase m-0">Address</h4>
              <hr class="my-4">
              <div class="small text-black-50"> Sidi bouzid (Ras Lafaa) </div>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-3 mb-md-0">
          <div class="card py-4 h-100">
            <div class="card-body text-center">
              <i class="fas fa-envelope text-primary mb-2"></i>
              <h4 class="text-uppercase m-0">Email</h4>
              <hr class="my-4">
              <div class="small text-black-50">
                <a href="#">Hotel@Safi.com</a>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-3 mb-md-0">
          <div class="card py-4 h-100">
            <div class="card-body text-center">
              <i class="fas fa-mobile-alt text-primary mb-2"></i>
              <h4 class="text-uppercase m-0">Phone</h4>
              <hr class="my-4">
              <div class="small text-black-50">(+212)309-028_832</div>
            </div>
          </div>
        </div>
      </div>

      <div class="social d-flex justify-content-center">
        <a href="#" class="mx-2">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="#" class="mx-2">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="#" class="mx-2">
          <i class="fab fa-github"></i>
        </a>
      </div>

    </div>
  </section>
  <footer class="bg-black small text-center text-white-50">
    <div class="container">
      Copyright &copy; Your Website 2020
    </div>
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="/grayscale.min.js"></script>
  <script src="index.js"></script>
</body>
</html>